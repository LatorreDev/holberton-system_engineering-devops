#!/usr/bin/env bash
# Script to install nginx server
sudo apt -y install nginx
sudo sed -i '0,/listen.*/s/listen.*/listen 80 default_server;/' /etc/nginx/sites-enabled/default
echo "Holberton School" | sudo tee /var/www/html/index.html
redirect="\n\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4\n\t}\n"
sed -i "35i\ $redirect" /etc/nginx/sites-available/default
sed -i "35i\ $redirect" /etc/nginx/sites-enabled/default
sudo service nginx restart
